<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.security.authorization.voter.basetimeentry"
                 class="AppBundle\Security\Authorization\Voter\BaseTimeEntryVoter" public="false">
            <tag name="security.voter"/>
        </service>

        <service id="app.security.authorization.voter.membership"
                 class="AppBundle\Security\Authorization\Voter\MembershipVoter" public="false">
            <tag name="security.voter"/>
        </service>

        <service id="app.security.authorization.voter.project"
                 class="AppBundle\Security\Authorization\Voter\ProjectVoter" public="false">
            <tag name="security.voter"/>
        </service>

        <service id="app.security.authorization.voter.task" class="AppBundle\Security\Authorization\Voter\TaskVoter"
                 public="false">
            <tag name="security.voter"/>
        </service>

        <service id="app.security.authorization.voter.team" class="AppBundle\Security\Authorization\Voter\TeamVoter"
                 public="false">
            <tag name="security.voter"/>
        </service>

        <service id="app.repository.user_repository" class="Doctrine\ORM\EntityRepository" factory-service="doctrine.orm.default_entity_manager" factory-method="getRepository">
            <argument>AppBundle\Entity\User</argument>
        </service>

        <service id="app.security.api_key_user_provider" class="AppBundle\Security\ApiKeyUserProvider">
            <argument type="service" id="app.repository.user_repository" />
        </service>

        <service id="app.security.apikey_authenticator" class="AppBundle\Security\ApiKeyAuthenticator">
            <argument type="service" id="app.security.api_key_user_provider"/>
        </service>
    </services>
</container>
